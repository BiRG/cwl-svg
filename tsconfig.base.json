{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": true,
    "noEmitHelpers": false,
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "downlevelIteration": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "compiled"
  ],
  "awesomeTypescriptLoaderOptions": {
    "resolveGlobs": true,
    "forkChecker": true
  }
}
